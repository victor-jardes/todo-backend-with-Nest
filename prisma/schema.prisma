// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String @unique
  password String
  Task     Task[] @relation("created")
}

model Task {
  id          String   @id
  description String
  isFinished  Boolean
  authorId    String
  author      User     @relation(name: "created", fields: [authorId], references: [id])
  createdAt   DateTime
  finishedAt  DateTime
}
